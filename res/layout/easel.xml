<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/easel"
    android:layout_marginLeft="20dp"  
    android:layout_marginTop="65dp"  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/easel_princess"
>

<com.hct.scene.launcher2.WeatherBoard  
    android:layout_marginLeft="13dp"  
    android:layout_marginTop="34dp"  
    android:layout_width="102dp"
    android:layout_height="88dp"
    android:orientation="vertical" >
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">

    <TextView android:id="@+id/weather_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/city_label" />
    
    <ImageButton android:id="@+id/weather_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_popup_sync"
        android:background="@android:color/transparent" />
</LinearLayout>

<TextView android:id="@+id/weather"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:textAppearance="@style/weather_label" />

<TextView android:id="@+id/temperature"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:textAppearance="@style/temperature_label" />

<TextView android:id="@+id/current_temperature"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:textAppearance="@style/degrees_label" />
</com.hct.scene.launcher2.WeatherBoard>
</FrameLayout>