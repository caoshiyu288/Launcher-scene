<com.hct.scene.launcher2.SceneShelfItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.hct.scene.launcher2.PagedViewIcon
        android:id="@+id/item"
        style="@style/WorkspaceIcon.Portrait.HouseApp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bookshelf_item_remove"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/bookshelf_item_select"
        android:visibility="gone" />

</com.hct.scene.launcher2.SceneShelfItem>